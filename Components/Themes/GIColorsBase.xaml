<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <telerik:Windows8Theme x:Key="Theme"/>
    
    <!-- Cores backgroud-->
    <!-- Colorido -->
    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" x:Key="GIColorfulBackground">
        <GradientStop Color="#FFF8F8F8" Offset="0"/>
        <GradientStop Color="#FFEDEDED" Offset="0.35"/>
        <GradientStop Color="#FFE5CDD1" Offset="0.6"/>
        <GradientStop Color="#FFE2E2E2" Offset="0.85"/>
    </LinearGradientBrush>
    
    <!-- Transparente -->
    <SolidColorBrush Color="Transparent" x:Key="GITransparentBackground" />
    
    
    
    
    
    <!-- Cores texto -->
    <SolidColorBrush Color="#FFcc082b" x:Key="GILabelTituloForegroundColor"/>
    <SolidColorBrush Color="#FF3c3c3c" x:Key="GILabelTextoForegroundColor"/>
    <SolidColorBrush Color="#FF6A6A6A" x:Key="GILabelSubtituloForegroundColor"/>
    <SolidColorBrush Color="#FFcc082b" x:Key="GILabelConteudoForegroundColor"/>



</ResourceDictionary>
